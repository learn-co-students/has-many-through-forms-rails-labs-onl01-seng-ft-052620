<h1><%= @post.title %></h1>
<p><%= @post.content %></p>

<h3>Categories</h3>
<ul>
<% @post.categories.each do |c| %>
  <%= c.name %> 
<% end %>
</ul>

<h3>Users</h3>
<ul>
    <% @post.unique_users.each do |user| %>
        <li><%= link_to user.username, user %></li>
    <% end %>
</ul>

<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <p><%= comment.user_username %> says: <%= comment.content %><p>
<% end %>

<h3>Add a comment</h3>
<%= render partial: 'comment', locals: {comment: Comment.new, post:@post} %>